<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_point_details"
    app:startDestination="@id/playerPointDetailsFragment">

    <fragment
        android:id="@+id/playerPointDetailsFragment"
        android:name="com.innovertech.gameon.view.fragment.PlayerPointDetailsFragment"
        android:label="PlayerPointDetailsFragment"
        tools:layout="@layout/fragment_player_point_details">
        <action
            android:id="@+id/action_playerPointDetailsFragment_to_matchPerLeaderboardFragment"
            app:destination="@id/matchPerLeaderboardFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/matchPerLeaderboardFragment"
        android:name="com.innovertech.gameon.view.fragment.MatchPerLeaderBoardFragment"
        android:label="MatchPerLeaderboardFragment"
        tools:layout="@layout/fragment_match_per_leaderboard">
        <argument
            android:name="matchId"
            app:argType="com.innovertech.gameon.model.CricketMatchHistory.CricketMatchHistoryData"
            app:nullable="true" />
        <action
            android:id="@+id/action_matchPerLeaderboardFragment_to_matchPerPointDetails"
            app:destination="@id/matchPerPointDetails"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/matchPerPointDetails"
        android:name="com.innovertech.gameon.view.fragment.MatchPerPointDetails"
        android:label="MatchPerPointDetails"
        tools:layout="@layout/fragment_match_per_point_details" >
        <argument
            android:name="matchId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="matchPerLeaderInfo"
            app:argType="com.innovertech.gameon.model.MatchPerLeader.MatchPerLeaderBoard"
            app:nullable="true" />
    </fragment>


</navigation>