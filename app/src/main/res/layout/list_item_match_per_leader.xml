<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/custom_sky_blue1"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/matchPerRankingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="1"
                android:textAppearance="@style/poppins_17_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/matchPerRankerNameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Nahid Hasan"
                android:textAppearance="@style/poppins_17_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/matchPerRankingTV"
                app:layout_constraintRight_toLeftOf="@id/matchPerRankerPointTV"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/matchPerRankerPointTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:padding="8dp"
                android:text="215"
                android:textAppearance="@style/poppins_17_black"
                app:layout_constraintBottom_toBottomOf="@id/matchPerRankerNameTV"
                app:layout_constraintRight_toLeftOf="@id/seeDetailIV"
                app:layout_constraintTop_toTopOf="@id/matchPerRankerNameTV" />

            <ImageView
                android:id="@+id/seeDetailIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_click"
                app:layout_constraintBottom_toBottomOf="@id/matchPerRankerPointTV"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/matchPerRankerPointTV" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>