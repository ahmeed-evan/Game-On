<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/selectPlayerCard"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerLayout"
            android:layout_width="match_parent"
            android:background="@drawable/bg_team_two"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/countryFlagImageIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:src="@drawable/flag"
                app:layout_constraintBottom_toBottomOf="@id/playerName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/playerName"
                app:layout_constraintTop_toTopOf="@id/playerName" />

            <TextView
                android:id="@+id/playerName"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingRight="8dp"
                android:text="Mohammad Azahar Uddin"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:textAppearance="@style/poppins_13_black"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/countryFlagImageIV"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>