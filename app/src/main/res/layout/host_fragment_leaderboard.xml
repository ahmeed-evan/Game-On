<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_nav"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LeaderBoard"
            android:textStyle="bold"
            android:textAppearance="@style/poppins_20_black"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:id="@+id/title_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="82dp"
            android:visibility="gone"
            android:src="@drawable/game_on_logo"
            app:layout_constraintBottom_toBottomOf="@id/title_text"
            app:layout_constraintLeft_toRightOf="@id/title_text"
            app:layout_constraintTop_toTopOf="@id/title_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/leaderBoardNavBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_splash"
        android:paddingBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:menu="@menu/leaderboard_nav_menu" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_leaderboard"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_splash"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        app:layout_constraintTop_toBottomOf="@id/leaderBoardNavBar"
        app:navGraph="@navigation/leaderboard_graph" />

</androidx.constraintlayout.widget.ConstraintLayout>